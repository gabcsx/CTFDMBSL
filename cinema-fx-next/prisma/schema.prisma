datasource db {
  provider = "sqlserver"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

  model User {
    id        Int      @id @default(autoincrement())
    username  String
    email     String   @unique
    password  String
    address   String? // optional
    phone     String? // optional
    role      String   @default("customer") // default role is customer
    createdAt DateTime @default(now())
  }

model Transaction {
  id           Int          @id @default(autoincrement())
  username     String
  email        String
  purchaseDate DateTime     @default(now())
  status       String
  totalPrice   Int
  products     Product[]    @relation("TransactionProducts")
  orderItems   OrderItem[]
}

model OrderItem {
  id            Int         @id @default(autoincrement())
  transaction   Transaction @relation(fields: [transactionId], references: [id])
  transactionId Int
  product Product @relation(fields: [productId], references: [id], onDelete: Cascade)
  productId     Int
  quantity      Int
  price         Int         // Store the price at the time of purchase
}

model Product {
  id           Int           @id @default(autoincrement())
  name         String
  description  String
  price        Int
  image        String
  category     String
  featured     Boolean
  inStock      Boolean
  stock        Int
  transactions Transaction[] @relation("TransactionProducts")
  cartItems    CartItem[]
  orderItems   OrderItem[]
}

model CartItem {
  id        Int      @id @default(autoincrement())
  sessionId String // or userId if logged-in users
  userEmail  String?
  product   Product  @relation(fields: [productId], references: [id])
  productId Int
  quantity  Int
  addedAt   DateTime @default(now())
}
